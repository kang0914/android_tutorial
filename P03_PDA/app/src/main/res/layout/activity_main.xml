<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a.p03_pda.MainActivity">

    <TextView
        android:id="@+id/textViewOrderNumer"
        android:padding="8dp"
        android:textColor="#fff"
        android:background="#f00"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="orderNum" />

    <Button
        android:onClick="onBtnOrderSelectClick"
        android:id="@+id/btnOrderSelect"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:text="select"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <TextView
        android:layout_toLeftOf="@id/btnOrderSelect"
        android:layout_toRightOf="@+id/textViewOrderNumer"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:onClick="onBtnScanClick"
        android:text="scan"
        android:layout_below="@id/textViewOrderNumer"
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
